<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="8dp">
    <ImageView

        android:id="@+id/iv_avatar_reply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:layout_toEndOf="@id/iv_avatar_reply"
        android:id="@+id/rl_text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatreply"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@id/iv_avatar_reply">
        <TextView
            android:id="@+id/tv_name_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PP"
            />
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f000"
            android:layout_marginTop="2dp"
            android:text="AAAAAAAAAAAAAAAAAAAA"
            android:layout_below="@id/tv_name_reply"
            />
    </RelativeLayout>


</RelativeLayout>